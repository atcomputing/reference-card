<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView
    android:id="@+id/sdescription"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="2dp"
    android:textSize="@dimen/textSizeDescription"
    android:textColor ="@color/boxcmddescr" />
    
    <HorizontalScrollView
                      android:layout_width="fill_parent" 
                      android:layout_height="wrap_content"
                      android:scrollbars="none">
    <TextView  
	android:id="@+id/synopsis"  
    android:layout_width="wrap_content" 
    android:layout_height="fill_parent"
    android:padding="2dp"
    android:textSize="@dimen/textSizeSynopsis"
    android:textColor ="@color/boxcmdsynopsis"    
    android:typeface="monospace"
    
    />
    </HorizontalScrollView>
    <HorizontalScrollView
                      android:layout_width="fill_parent" 
                      android:layout_height="wrap_content"
                      android:paddingTop="20dp"
                      android:scrollbars="none">
    <TextView
    android:id="@+id/ldescription"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="2dp"
    android:textSize="@dimen/textSizeFlags"
    android:textColor ="@color/boxcmdflags" />
    </HorizontalScrollView>
</LinearLayout>
