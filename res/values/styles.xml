<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- <item name="windowActionBar">false</item> -->


        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/atblue</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/atbluedark</item>

        <!--
         colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets
        -->
        <item name="colorAccent">@color/atbluelight</item>

        <!--
         You can also set colorControlNormal, colorControlActivated
         colorControlHighlight, and colorSwitchThumbNormal.
        -->
    </style>

    <style name="DescriptionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/atblue</item>
        <item name="android:textSize">@dimen/textSizeDescription</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="SynopsisText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/atbluedark</item>
        <item name="android:textSize">@dimen/textSizeSynopsis</item>
        <item name="android:padding">2dp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="FlagsText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/atblack</item>
        <item name="android:textSize">@dimen/textSizeFlags</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="RowItem">
        <item name="android:layout_width">@dimen/rowItemWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeRowItem</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="RowItem.NameText">
        <item name="android:textColor">@color/atblue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="RowItem.DescText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/atbluelight</item>
    </style>

    <style name="GroupItem">
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/atbluedark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/textSizeExpList</item>
    </style>

</resources>