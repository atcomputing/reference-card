<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!-- theme customizations can go here. -->
    </style>

    <style name="DescriptionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/boxcmddescr</item>
        <item name="android:textSize">@dimen/textSizeDescription</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="SynopsisText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/boxcmdsynopsis</item>
        <item name="android:textSize">@dimen/textSizeSynopsis</item>
        <item name="android:padding">2dp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="FlagsText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/boxcmdflags</item>
        <item name="android:textSize">@dimen/textSizeFlags</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="RowItem">
        <item name="android:layout_width">@dimen/rowItemWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeRowItem</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="RowItem.NameText">
        <item name="android:textColor">@color/listcolumn1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="RowItem.DescText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/listcolumn2</item>
    </style>

    <style name="GroupItem">
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/groupitem</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/textSizeExpList</item>
    </style>

    <style name="TabItemText">
        <item name="android:padding">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tab_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/textSizeTab</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_bg</item>
    </style>
</resources>