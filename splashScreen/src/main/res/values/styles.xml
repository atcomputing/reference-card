<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="AppBaseTheme" >
    <!-- Base application theme.
         Defining this lets values-v21/styles.xml reuse it with changes. -->
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

         <item name="windowActionBar">false</item>

        <!-- This should fix issue with toolbar title being smaller in landscape mode
         see: http://stackoverflow.com/questions/10890159/android-actionbarsherlock-is-there-any-way-to-keep-the-same-actionbar-height-b
        -->
        <item name="actionBarSize">48dip</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/atblue</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/atbluedark</item>

        <!--
         colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets
        -->
        <item name="colorAccent">@color/atbluelight</item>

        <item name="android:textColorSecondary">@color/atwhite_secondarytext</item>

        <item name="android:textColorPrimary">@color/atwhite</item>

    </style>

    <style name="ToolBarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="android:background">@color/atbluedark</item>-->

    </style>


    <style name="TitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
    	    <item name="android:textColor">@color/atwhite</item>
    </style>
    
    <style name="TabView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/textSizeTab</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/atwhite_secondarytext</item>
        <item name="android:textSize">@dimen/textSizeTab</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="DescriptionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/atblue</item>
        <item name="android:textSize">@dimen/textSizeDescription</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="SynopsisText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/atbluedark</item>
        <item name="android:textSize">@dimen/textSizeSynopsis</item>
        <item name="android:padding">2dp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="FlagsText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/atbluedark</item>
        <item name="android:textSize">@dimen/textSizeFlags</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="RowItem">
        <item name="android:layout_width">@dimen/rowItemWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeRowItem</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="RowItem.NameText">
        <item name="android:textColor">@color/atblue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="RowItem.DescText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/atbluelight</item>
    </style>

    <style name="GroupItem">
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/atbluedark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/textSizeExpList</item>
    </style>

    <style name="Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/atwhite</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/textPadding</item>
    </style>

    <style name="Dialog.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/iconSize</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Dialog.Message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeDescription</item>
        <item name="android:textColor">@color/atblue</item>
    </style>
</resources>