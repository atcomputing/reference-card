<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/atlogo"
        style="@style/Dialog.Icon"
        android:elevation="2dp"/>


    <ScrollView
        android:layout_height="0px"
        android:layout_width="match_parent"
        android:layout_weight="1"
        >

        <LinearLayout
            style="@style/Dialog.Changelog"
            android:id="@+id/changelogentries"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:text="@string/new_in_linux_reference_card"
                style="@style/Dialog.Title"
                />
        </LinearLayout>
    </ScrollView>

    <TextView
        style="@style/Dialog.Copyright"
        android:text="@string/Copyright"
        android:elevation="2dp">
    </TextView>

    <TextView
        style="@style/Dialog.Copyright"
        android:autoLink="web"
        android:text="@string/Visit_atcomputing"
        android:elevation="2dp">
    </TextView>
</LinearLayout>